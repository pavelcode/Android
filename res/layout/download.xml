<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DownLoadActivity" >

    <TextView
        android:id="@+id/download_filename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="文件名" />

    <ProgressBar
        android:id="@+id/download_fileprogressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/filename"
        android:layout_below="@+id/filename"
        android:layout_marginTop="14dp" />

    <Button
        android:id="@+id/download_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fileprogressBar"
        android:layout_marginLeft="88dp"
        android:layout_marginTop="23dp"
        android:layout_toRightOf="@+id/filename"
        android:text="下载" />

    <Button
        android:id="@+id/download_stop_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/download_btn"
        android:layout_alignBottom="@+id/download_btn"
        android:layout_toRightOf="@+id/download_btn"
        android:text="停止" />

</RelativeLayout>