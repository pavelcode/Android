<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
   
   <Button
       android:id="@+id/SendBroadcastBtn"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="发送一个广播"
       /> 
    
    
   <Button 
        android:id="@+id/Send_MyBroadCastBtn" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content"
        android:text="发送一个无序广播"
        />    
   
   <Button 
        android:id="@+id/OrderedBroadCastBtn" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content"
        android:text="有序广播"
        />   
    <Button 
        android:id="@+id/register_MyBroadCastBtn" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content"
        android:text="注册广播"
        />  
        
     <Button 
        android:id="@+id/unregister_MyBroadCastBtn" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content"
        android:text="取消注册广播"
        />  
   
   
   
   <Button 
        android:id="@+id/NotificationBroadCastBtn" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content"
        android:text="使用Notification提示广播"
        />   
    
		
</LinearLayout>
