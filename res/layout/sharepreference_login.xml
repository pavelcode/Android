<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="登陆"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/sharepreference_login_et1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv1"
        android:gravity="center_horizontal"
        android:hint="输入用户名" />

    <EditText
        android:id="@+id/sharepreference_login_et2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/sharepreference_login_et1"
        android:layout_alignRight="@id/sharepreference_login_et1"
        android:layout_below="@id/sharepreference_login_et1"
        android:gravity="center_horizontal"
        android:hint="输入密码" />
    
     <CheckBox
        android:id="@+id/sharepreference_login_cb1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sharepreference_login_et2"
        android:layout_centerVertical="true"
        android:layout_marginLeft="28dp"
        android:text="记住密码" />
     
       <CheckBox
        android:id="@+id/sharepreference_login_cb2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/sharepreference_login_cb1"
        android:layout_toRightOf="@id/sharepreference_login_cb1"
        android:text="自动登录" />

    <Button
        android:id="@+id/sharepreference_login_btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/sharepreference_login_cb1"
        android:layout_below="@id/sharepreference_login_cb1"
        android:layout_marginTop="16dp"
        android:text="取消" />

      <Button
          android:id="@+id/sharepreference_login_btn2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignBaseline="@id/sharepreference_login_btn1"
          android:layout_alignBottom="@id/sharepreference_login_btn1"
          android:layout_alignRight="@id/sharepreference_login_cb2"
          android:text="登录" />

</RelativeLayout>