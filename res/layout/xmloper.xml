<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    >
	<Button
		android:id="@+id/makexml"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="生成xml文件"
		/>
	<Button
		android:id="@+id/readxmlBySAX"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="SAX读取xml文件"
		/>
	<Button
		android:id="@+id/readxmlByDOM"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="DOM读取xml文件"
		/>
	<Button
		android:id="@+id/readxmlByPull"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="Pull读取xml文件"
		/>
	<Button 
	    android:id="@+id/readxmlByResourceParser"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="ResourceParser读取Xml文件"/>
	
	<TextView 
	    android:id="@+id/myShow"
	    android:layout_width="match_parent"
		android:layout_height="wrap_content"
	    />
	
</LinearLayout>
